<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Clock">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:id="@+id/navbarChronic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:weightSum="5">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnClockChronic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/btnClockChronic"
            android:background="@drawable/btn_background_chronic"
            android:textColor="@color/white"
            android:textSize="16sp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btnChronoChronic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/btnChrono"
            android:background="@drawable/btn_background_chronic"
            android:textColor="@color/white"
            android:textSize="16sp"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/navbarChronic"
        android:id="@+id/clockSetterChronic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="9"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <EditText
            android:id="@+id/hour1Chronic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/clockDivChronic"
            android:gravity="bottom"
            android:textAlignment="center"
            android:textSize="30dp"
            tools:ignore="RtlCompat" />
        <EditText
            android:id="@+id/minute1Chronic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textAlignment="center"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/dateSetterChronic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:weightSum="8"
        android:layout_below="@id/clockSetterChronic">
        <EditText
            android:id="@+id/day1Chronic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dateDivChronic"
            android:gravity="bottom"
            android:textAlignment="center"
            android:textSize="30dp"
            tools:ignore="RtlCompat" />
        <EditText
            android:id="@+id/month1Chronic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dateDivChronic"
            android:gravity="bottom"
            android:textAlignment="center"
            android:textSize="30dp"
            tools:ignore="RtlCompat"/>
        <EditText
            android:id="@+id/year1Chronic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:textAlignment="center"/>
    </LinearLayout>
    <Button
        android:id="@+id/setTimeChronic"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/dateSetterChronic"
        android:text="@string/setTime"
        android:background="@drawable/btn_background_chronic"
        android:textColor="@color/white"
        android:textSize="16sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/setTimeChronic">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/dial"/>

        <com.os0.navigation.CustomAnalogClock
            android:id="@+id/clockAChronic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.os0.navigation.CustomAnalogClock>
    </RelativeLayout>

</RelativeLayout>