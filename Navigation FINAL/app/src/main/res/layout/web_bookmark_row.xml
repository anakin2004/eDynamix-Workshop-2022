<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:weightSum="12">


        <TextView
            android:id="@+id/nameRowB"
            android:layout_width="19dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/urlRowB"
            android:layout_width="19dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:text="TextView"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/btnRowB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/web_roundablebtn"
            android:padding="10dp"
            android:src="@drawable/web_ic_outline_delete_outline_24"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <ImageView
            android:id="@+id/btnEditRowB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@drawable/web_roundablebtn"
            android:padding="13dp"
            android:src="@drawable/web_ic_outline_edit_24"
            android:textColor="@color/black"
            android:textSize="16dp" />

    </LinearLayout>
</RelativeLayout>