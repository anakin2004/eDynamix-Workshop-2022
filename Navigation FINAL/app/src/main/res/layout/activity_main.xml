<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#dde4dd">

        <TextView
            android:id="@+id/scheduler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="scheduler"
            android:textAlignment="center"
            android:textSize="22sp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="25dp"
            android:id="@+id/clockSetterChronic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:weightSum="9"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"/>
            <TextView
                android:id="@+id/hourNav"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textAlignment="center"
                android:textSize="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/clockDivChronic"
                android:gravity="bottom"
                android:textAlignment="center"
                android:textSize="30dp"
                tools:ignore="RtlCompat" />
            <TextView
                android:id="@+id/minuteNav"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:textAlignment="center"
                android:textSize="40dp"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="2"/>
        </LinearLayout>

        <com.os0.navigation.CustomAnalogClock
            android:id="@+id/AnalClock"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:background="#dde4dd">

        <TextView
            android:id="@+id/memorytxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="memory"
            android:textAlignment="center"
            android:textSize="22sp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <Button
            android:id="@+id/logoutBUTT"
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="Log Out"
            android:textSize="30dp"
            android:background="@drawable/btn_background"
            android:textColor="@color/white"
            />
    </RelativeLayout>


</LinearLayout>